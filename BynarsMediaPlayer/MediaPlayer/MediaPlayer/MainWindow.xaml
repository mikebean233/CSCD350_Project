<Window x:Class="MediaPlayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:dg="http://schemas.microsoft.com/wpf/2008/toolkit"
        Title="MainWindow" Height="570" Width="1307.75"
        Loaded="Window_Loaded"
        Closing="Window_Closing">

    <Window.Resources>

        <Style x:Key="SliderRepeatButton" TargetType="RepeatButton">
            <Setter Property="SnapsToDevicePixels" Value="true" />
            <Setter Property="OverridesDefaultStyle" Value="true" />
            <Setter Property="IsTabStop" Value="false" />
            <Setter Property="Focusable" Value="false" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RepeatButton">
                        <Border BorderThickness="3" BorderBrush="#565460" Background="#565460" Height="3"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SliderRepeatButton1" TargetType="RepeatButton">
            <Setter Property="SnapsToDevicePixels" Value="true" />
            <Setter Property="OverridesDefaultStyle" Value="true" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RepeatButton">
                        <Border SnapsToDevicePixels="True" Background="#B8D541" BorderThickness="3" BorderBrush="#000013" Height="3"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SliderThumb" TargetType="Thumb">
            <Setter Property="SnapsToDevicePixels" Value="true" />
            <Setter Property="OverridesDefaultStyle" Value="true" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Thumb">
                        <Ellipse Height="10" Width="10" Fill="#FF0074AD"></Ellipse>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <ControlTemplate x:Key="Slider"  TargetType="Slider">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" MinHeight="{TemplateBinding MinHeight}" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Track Grid.Row="1" x:Name="PART_Track"   >
                    <Track.DecreaseRepeatButton>
                        <RepeatButton Style="{StaticResource SliderRepeatButton1}"  Command="Slider.DecreaseLarge" />
                    </Track.DecreaseRepeatButton>
                    <Track.Thumb>
                        <Thumb Style="{StaticResource SliderThumb}"  />
                    </Track.Thumb>
                    <Track.IncreaseRepeatButton>
                        <RepeatButton Style="{StaticResource SliderRepeatButton}" Command="Slider.IncreaseLarge" />
                    </Track.IncreaseRepeatButton>
                </Track>
            </Grid>
        </ControlTemplate>

        <Style x:Key="Horizontal_Slider" TargetType="Slider">
            <Setter Property="Focusable" Value="False"/>
            <Setter Property="SnapsToDevicePixels" Value="true" />
            <Setter Property="OverridesDefaultStyle" Value="true" />
            <Style.Triggers>
                <Trigger Property="Orientation" Value="Horizontal">
                    <Setter Property="MinHeight" Value="21" />
                    <Setter Property="MinWidth" Value="104" />
                    <Setter Property="Template" Value="{StaticResource Slider}" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Background= "#000013" Margin="0,0,5,0.5">
        <!-- Background -->
        <Border BorderThickness="1" BorderBrush="#FF0074AD" CornerRadius="10" Padding="2"
        HorizontalAlignment="Left" Margin="27,23,0,90">

            <Grid>

                <!-- Rounded mask (stretches to fill Grid) -->
                <Border Name="mask" Background="White" CornerRadius="7"/>

                <!-- Main content container -->
                <StackPanel>

                    <!-- VisualBrush opacity mask -->
                    <StackPanel.OpacityMask>
                        <VisualBrush Visual="{Binding ElementName=mask}"/>
                    </StackPanel.OpacityMask>
                    <Rectangle Height="491" Width="875" Fill="#868596"/>

                    <!-- Content -->

                </StackPanel>

            </Grid>

        </Border>

        <!-- Media 
        <Canvas x:Name="canvas_media" Background="#868596" Margin="25,25,25,75">   
        </Canvas> -->

        <!-- Media -->
        <MediaElement Name="me_MediaElement" Margin="27,23,390,90" LoadedBehavior="Manual" UnloadedBehavior="Stop" Stretch="Fill"/>

        <Label x:Name="lbl_MetaData" Content="Metadata" HorizontalAlignment="Left" Margin="305,479,0,0" VerticalAlignment="Top" Height="51" Width="321" Foreground="#FFFDFDFD"/>

        <!-- Library -->
        <TabControl x:Name="tabControl" HorizontalAlignment="Left" Height="429" Margin="927,23,0,0" VerticalAlignment="Top" Width="361">
            <TabItem Header="TabItem">
                <Grid Background="#FFE5E5E5" Margin="0,0,-6,0"/>
            </TabItem>
            <TabItem Header="Media Library" >
                <Grid Background="#FFE5E5E5" Margin="0,0,11,-3">
                    <DataGrid 
                        x:Name="dataGrid_MediaL" 
                        HorizontalAlignment="Left" 
                        VerticalAlignment="Top" 
                        Height="394" 
                        Width="344" 
                        SelectionChanged="DataGrid_MediaL_OnSelected"
                        >
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Playing"  Binding="{Binding IsPlaying}" />
                            <DataGridTextColumn Header="Album"    Binding="{Binding Album}" />
                            <DataGridTextColumn Header="Title"    Binding="{Binding Title}" />
                            <DataGridTextColumn Header="year"     Binding="{Binding Year}" />
                            <DataGridTextColumn Header="Artist"   Binding="{Binding Artist}" />
                            <DataGridTextColumn Header="Duration" Binding="{Binding Duration}" />
                            <DataGridTextColumn Header="Filename" Binding="{Binding Filename}" />
                            <DataGridTextColumn Header="Filetype" Binding="{Binding Filetype}" />
                            <DataGridTextColumn Header="Filepath" Binding="{Binding Filepath}" />
                            <DataGridTextColumn Header="Position" Binding="{Binding Position}" />
                        </DataGrid.Columns>

                    </DataGrid>

                </Grid>
            </TabItem>

        </TabControl>
        <Button x:Name="BTN_help" Style="{StaticResource ResourceKey=mediaButton}" Content="?" HorizontalAlignment="Center" Margin="676,479,602,0" VerticalAlignment="Top" Width="20" Height="20" Click="HelpBox" Foreground="#FFFBFBFB"/>


        <!-- Controls -->
        <Polygon Name="poly_PlayButton" Fill="#323D98" Stroke="Black" Margin="37,479,879,10" MouseDown="poly_PlayButton_MouseDown">
            <Polygon.Points>
                <Point X="0" Y="0"></Point>
                <Point X="20" Y="15"></Point>
                <Point X="0" Y="30"></Point>
            </Polygon.Points>
        </Polygon>

        <Polygon Name="poly_StopButton" Fill="#323D98" Stroke="Black" Margin="199,479,712,10" MouseDown="poly_StopButton_MouseDown">
            <Polygon.Points>
                <Point X="5" Y="5"></Point>
                <Point X="25" Y="5"></Point>
                <Point X="25" Y="25"></Point>
                <Point X="5" Y="25"></Point>
            </Polygon.Points>
        </Polygon>
        <Polygon Name="Poly_PauseButton" Fill="#323D98" Stroke="Black" Margin="260,480,998,25" MouseDown="Poly_PauseButton_OnMouseDown">
            <Polygon.Points>
                <Point X="5" Y="5"></Point>
                <Point X="25" Y="5"></Point>
                <Point X="25" Y="12"></Point>
                <Point X="5" Y="12"></Point>

                <Point X="5" Y="17"></Point>
                <Point X="25" Y="17"></Point>
                <Point X="25" Y="25"></Point>
                <Point X="5" Y="25"></Point>
            </Polygon.Points>
        </Polygon>

        <Polygon Name="poly_SkipForeward" Fill="#323D98" Stroke="Black" Margin="230,479,681,10" MouseDown="poly_SkipForeward_MouseDown">
            <Polygon.Points>
                <!-- Triangle -->
                <Point X="5" Y="5"></Point>
                <Point X="20" Y="15"></Point>
                <Point X="5" Y="25"></Point>
                <!-- Bar 
                <Point X="20" Y="5"></Point>
                <Point X="25" Y="5"></Point>
                <Point X="25" Y="25"></Point>
                <Point X="20" Y="25"></Point> -->
            </Polygon.Points>
        </Polygon>

        <Polygon Name="poly_SkipBackward" Fill="#323D98" Stroke="Black" Margin="173,479,740,10"  RenderTransformOrigin="0.5,0.5" MouseDown="poly_SkipBackward_MouseDown">
            <Polygon.Points>
                <!-- Triangle -->
                <Point X="20" Y="5"></Point>
                <Point X="5" Y="15"></Point>
                <Point X="20" Y="25"></Point>
                <!-- Bar 
                <Point X="20" Y="5"></Point>
                <Point X="25" Y="5"></Point>
                <Point X="25" Y="25"></Point>
                <Point X="20" Y="25"></Point> -->
            </Polygon.Points>
        </Polygon>

        <!--
        <ProgressBar x:Name="prgBar_ScrubBar" HorizontalAlignment="Left" Height="7" Margin="37,467,0,0" VerticalAlignment="Top" Width="864" Background="#000013" Foreground="#B8D541"/>
        -->

        <Label x:Name="lbl_ScrubBarTime" Content="0:00:00 / 0:00:00" HorizontalAlignment="Left" Margin="67,480,0,0" VerticalAlignment="Top" Width="106" FontWeight="Bold" Foreground="AliceBlue" Background="#009E9ED6" Height="31"/>

        <Slider Name="slider_ScrubBar" HorizontalAlignment="Left" Height="7" Margin="37,458,0,0" VerticalAlignment="Top" Width="864" Style="{StaticResource Horizontal_Slider}" PreviewMouseUp="Slider_ScrubBar_OnPreviewMouseUp"/>

        <Slider x:Name="slider_VolumeControl" Width="200" Value="0" Orientation="Horizontal" HorizontalAlignment="Left" 
            IsSnapToTickEnabled="False" Minimum="0" Maximum="5" TickPlacement="BottomRight" 
            AutoToolTipPlacement="BottomRight" TickFrequency="1"
            AutoToolTipPrecision="2" IsDirectionReversed="False"
            IsMoveToPointEnabled="False" Margin="701,480,0,39"
            ValueChanged="slider_VolumeControl_ValueChanged"
            Style="{StaticResource Horizontal_Slider}" />
   </Grid>
</Window>
