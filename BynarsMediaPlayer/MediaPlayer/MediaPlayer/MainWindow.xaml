<Window x:Class="MediaPlayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="550" Width="1295" Loaded="Window_Loaded" ResizeMode="NoResize" Closing="Window_Closing">
    <Grid Background= "#000013" Margin="0,0,-369,-86.5" RenderTransformOrigin="0.506,0.691">
        <!-- Background -->

        <Border BorderThickness="3" BorderBrush="#FF0074AD" CornerRadius="10" Padding="2"
        HorizontalAlignment="Left" VerticalAlignment="Top" Margin="37,33,0,0">

            <Grid>

                <!-- Rounded mask (stretches to fill Grid) -->
                <Border Name="mask" Background="White" CornerRadius="7"/>

                <!-- Main content container -->
                <StackPanel>

                    <!-- VisualBrush opacity mask -->
                    <StackPanel.OpacityMask>
                        <VisualBrush Visual="{Binding ElementName=mask}"/>
                    </StackPanel.OpacityMask>
                    <MediaElement Name="mediaElement" Height="354" Width="875"/>

                    <!-- Content -->

                </StackPanel>

            </Grid>

        </Border>

        <!-- Media 
        <Canvas x:Name="canvas_media" Background="#868596" Margin="25,25,25,75">   
        </Canvas> -->

        <Polygon Fill="#FF0074AD" Stroke="Black" Name="poly_PlayButton"  Margin="37,479,879,10" MouseDown="poly_PlayButton_MouseDown">
            <Polygon.Points>
                <Point X="0" Y="0"></Point>
                <Point X="20" Y="15"></Point>
                <Point X="0" Y="30"></Point>
            </Polygon.Points>
        </Polygon>

        <Polygon Fill="#FF0074AD" Stroke="Black" Name="poly_StopButton"  Margin="99,479,812,10" MouseDown="poly_StopButton_MouseDown">
            <Polygon.Points>
                <Point X="5" Y="5"></Point>
                <Point X="25" Y="5"></Point>
                <Point X="25" Y="25"></Point>
                <Point X="5" Y="25"></Point>
            </Polygon.Points>
        </Polygon>

        <Polygon Fill="#FF0074AD" Stroke="Black" Name="poly_SkipForeward"  Margin="130,479,781,10">
            <Polygon.Points>
                <!-- Triangle -->
                <Point X="5" Y="5"></Point>
                <Point X="20" Y="15"></Point>
                <Point X="5" Y="25"></Point>
                <!-- Bar 
                <Point X="20" Y="5"></Point>
                <Point X="25" Y="5"></Point>
                <Point X="25" Y="25"></Point>
                <Point X="20" Y="25"></Point> -->
            </Polygon.Points>
        </Polygon>

        <Polygon Fill="#FF0074AD" Stroke="Black" Name="poly_SkipBackward"  Margin="73,479,840,10" RenderTransformOrigin="0.5,0.5">
            <Polygon.Points>
                <!-- Triangle -->
                <Point X="20" Y="5"></Point>
                <Point X="5" Y="15"></Point>
                <Point X="20" Y="25"></Point>
                <!-- Bar 
                <Point X="20" Y="5"></Point>
                <Point X="25" Y="5"></Point>
                <Point X="25" Y="25"></Point>
                <Point X="20" Y="25"></Point> -->
            </Polygon.Points>
        </Polygon>

        <Label x:Name="lbl_MetaData" Content="Metadata" HorizontalAlignment="Left" Margin="37,33,0,0" VerticalAlignment="Top" Height="364" Width="885"/>

        <ProgressBar x:Name="prgBar_ScrubBar" HorizontalAlignment="Left" Height="7" Margin="37,461,0,0" VerticalAlignment="Top" Width="864" Background="#000013" Foreground="#B8D541"/>
        <Label x:Name="lbl_ScrubBarTime" Content="0:00:00 / 0:00:00" HorizontalAlignment="Left" Margin="202,479,0,0" VerticalAlignment="Top" Width="106" FontWeight="Bold" Foreground="AliceBlue" Background="#009E9ED6" Height="31"/>

        <Slider x:Name="slider_VolumeControl" Width="200" Value="0" Orientation="Horizontal" HorizontalAlignment="Left" 
            IsSnapToTickEnabled="True" Minimum="0" Maximum="5" TickPlacement="BottomRight" 
            AutoToolTipPlacement="BottomRight" TickFrequency="1"
            AutoToolTipPrecision="2" IsDirectionReversed="False"
            IsMoveToPointEnabled="False" Margin="701,494,0,26"
            ValueChanged="slider_VolumeControl_ValueChanged" Background="White" />
        <TabControl x:Name="tabControl" HorizontalAlignment="Left" Height="439" Margin="946,29,0,0" VerticalAlignment="Top" Width="661">
            <TabItem Header="TabItem">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Media Library" Background="">
                <Grid Background="#FFE5E5E5" Margin="0,0,-12,-344">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="186*"/>
                        <ColumnDefinition Width="481*"/>
                    </Grid.ColumnDefinitions>
                    <DataGrid x:Name="dataGrid_MediaL" HorizontalAlignment="Left" VerticalAlignment="Top" Height="415" Width="657" Grid.ColumnSpan="2"/>

                </Grid>
            </TabItem>

        </TabControl>
    </Grid>
</Window>
