<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Button x:Name="button" Content="Pick Media File" HorizontalAlignment="Left" Height="38" Margin="10,10,0,0" VerticalAlignment="Top" Width="103" Click="button_Click"/>
        <Button x:Name="button1" Content="Play" HorizontalAlignment="Left" Height="38" Margin="118,10,0,0" VerticalAlignment="Top" Width="98" Click="button1_Click"/>
        <Button x:Name="button2" Content="Pause" HorizontalAlignment="Left" Height="38" Margin="221,10,0,0" VerticalAlignment="Top" Width="93" Click="button2_Click"/>
        <Button x:Name="button3" Content="Stop" HorizontalAlignment="Left" Height="38" Margin="319,10,0,0" VerticalAlignment="Top" Width="103" Click="button3_Click"/>

    </Grid>
</Window>
